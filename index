					document.getElementById("button3").removeEventListener("click", theEnd);
          document.getElementById("button1").style.visibility = "hidden";
          document.getElementById("button3").style.visibility = "hidden";
        }

        function gameOver() {
          document.getElementById('art').style.backgroundImage="url(img/test.jpg)";
          //await sleep(5000);
          window.location.reload(true);
        }


